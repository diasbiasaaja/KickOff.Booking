<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pppembayaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <!-- Informasi Lapangan dan Total -->
        <TextView
            android:id="@+id/txtLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lapangan:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Jam:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Gambar QR Code -->
        <ImageView
            android:id="@+id/imgQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/codeqr"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Silakan transfer ke QR Code di atas, lalu upload bukti pembayaran."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Tombol pilih gambar bukti -->
        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Bukti Pembayaran"
            android:textColor="@color/white"
            android:backgroundTint="#001F5B"/>

        <!-- Preview gambar bukti -->
        <ImageView
            android:id="@+id/imgPreviewBukti"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#DDD" />

        <!-- Tombol Kirim -->
        <Button
            android:id="@+id/btnKirimPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:backgroundTint="#001F5B"/>
    </LinearLayout>
</ScrollView>
