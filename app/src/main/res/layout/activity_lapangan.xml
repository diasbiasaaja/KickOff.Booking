<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pplapanggg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <!-- Lapangan 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_lapangan"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imageLapangan1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lapangvinil" />

            <TextView
                android:id="@+id/textNama1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Futsal Standar \n Ukuran lapang :\n Panjang: 25M \n Lebar 18M "
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textHarga1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp90.000 "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Lapangan 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_lapangan"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imageLapangan2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lapangsintetis" />

            <TextView
                android:id="@+id/textNama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Lapang Futsal Rumput Sintetis \n Ukuran lapang :\n Panjang: 25M \n Lebar 18M"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textHarga2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp100.000"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Lapangan 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_lapangan"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imageLapangan3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lapangmini" />

            <TextView
                android:id="@+id/textNama3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mini Soccer Outdoor \n Ukuran lapang :\n Panjang: 40M \n Lebar 25M"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textHarga3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp120.000"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_lapangan"
        android:elevation="4dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga yang tertera adalah harga per jam"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>
